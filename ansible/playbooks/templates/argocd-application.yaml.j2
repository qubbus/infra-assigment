apiVersion: argoproj.io/v1alpha1
kind: Application
metadata:
  name: web-nginx
  namespace: argocd
spec:
  project: default
  source:
    repoURL: "{{ repo_url }}"
    targetRevision: "{{ repo_branch }}"
    path: kubernetes/app
  destination:
    server: https://kubernetes.default.svc
    namespace: "{{ app_namespace }}"
  syncPolicy:
    automated:
      prune: true
      selfHeal: true
    syncOptions:
      - CreateNamespace=true
